<% include ./partials/header%>

<div class="ui main text container">
     <div class="ui huge header"><i class="comments icon"></i></div>
<div class="ui top attached text container inverted segment">
    <div class="ui huge header">New Blog</div>
    <form class="ui form" action="/blogs" method="POST">
        <div class="field">
            <label>Title</label>
        <input type="text" name="blog[title]" placeholder="title" required>
        </div>
        <div class="field">
            <label><i class="camera retro icon"></i></label>
        <input type="text" name="blog[image]" placeholder="add image url" required>
        </div>
        
        <div class="field">
            <label>Blog Content</label>
        <textarea name="blog[body]" required></textarea>
        </div>
        <input class="ui inverted pink button" type="Submit">
    </form>
</div>

